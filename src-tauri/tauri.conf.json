{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "finder",
  "version": "0.1.5",
  "identifier": "com.finder.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "finder",
        "width": 400,
        "height": 400,
        "decorations": false,
        "resizable": false,
        "skipTaskbar": true
      },
      {
        "title": "settings", 
        "label": "settings",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "url": "/settings",
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
